                        --exp=${expt} --ctl=${cntl}                  \
                        --file_obs=${ometrics}_${obs}_cmipname.csv            \
                        --file_exp=${metrics}_${expt}.csv   \
                        --file_ctl=${metrics}_${cntl}.csv

exit
